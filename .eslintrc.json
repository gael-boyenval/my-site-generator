{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["airbnb"],
  "parser": "babel-eslint",
  "plugins": ["react", "import"],
  "settings": {
    "import/core-modules": ["react", "prop-types", "styled-components", "config"]
  },
  "globals": {
    "graphql": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    "arrow-parens": ["error", "always"],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  }
}
